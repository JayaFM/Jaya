<Styles
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:v="clr-namespace:Jaya.Ui.Views;assembly=Jaya.Ui">
  <Style Selector="v|ManagePluginsView ListBox.InstalledPlugins Image">
    <Setter Property="Width" Value="16" />
    <Setter Property="Height" Value="16" />
  </Style>
  <Style Selector="v|ManagePluginsView ListBox.InstalledPlugins TextBlock">
    <Setter Property="Margin" Value="4 0 0 0" />
  </Style>


  <Style Selector="v|ManagePluginsView Grid.SelectedPluginsHeader Image">
    <Setter Property="Width" Value="32" />
    <Setter Property="Height" Value="32" />
    <Setter Property="VerticalAlignment" Value="Top" />
    <Setter Property="HorizontalAlignment" Value="Left" />
  </Style>
  <Style Selector="v|ManagePluginsView Grid.SelectedPluginsHeader TextBlock">
    <Setter Property="TextWrapping" Value="Wrap" />
    <Setter Property="Margin" Value="4 0 0 0" />
  </Style>
</Styles>